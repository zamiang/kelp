{
  "compilerOptions": {
    "removeComments": false, // comments are required for bundle splitting using webpackChunkName
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["app/**/*.ts", "app/**/*.tsx"]
}
